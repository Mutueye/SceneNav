ul.ulist
	width auto
	height auto
	li
		width auto
		padding 0px 10px 10px 10px
		height auto
		@media MOBILE
			padding 0px 5px 5px 5px
		.ulist-content
			width 100%
			font-size 14px
			text-indent 16px
			color lighten(BLACK_GRAY,20%)
			line-height 34px
			display block
			text-decoration none
			background-color lighten(OCEAN_BLUE,95%)
			position relative
			&:hover
				background-color OCEAN_BLUE
				color #ffffff
				.ulist-dot
					background-color #ffffff
				@media MOBILE
					background-color transparent
					color lighten(BLACK_GRAY,20%)
					.ulist-dot
						background-color lighten(BLACK_GRAY,20%)
			.ulist-dot
				position absolute
				width 2px
				height 2px
				left 8px
				top 16px
				background-color lighten(BLACK_GRAY,20%)
