.bus-list-bg
	position absolute
	width auto
	height auto
	left 0
	right 0
	top 0
	bottom 0
	background-image url('img/black_bg_60pct.png')
	background-repeat repeat
	background-color transparent
	z-index ZI_bus_list_bg
.bus-list
	width 500px
	height 450px
	background-color #ffffff
	position absolute
	left 50%
	margin-left -250px
	top 50%
	margin-top -225px
	z-index ZI_bus_list
	box-shadow 0 0 20px 0px rgba(black, .2)
	@media MOBILE
		width auto
		left 0px
		right 0px
		margin-left 0px
		height auto
		top 0px
		bottom 0px
		margin-top 0px
	&-title
		top 0px
		left 0px
		width 100%
		height 48px
		box-sizing border-box 
		border 4px solid #ffffff
		background-color OCEAN_BLUE
		display block
		line-height 40px
		text-indent 12px
		font-size 16px
		color #ffffff
		position relative
		//border-bottom 1px solid GRAY_E3
		@media MOBILE
			border none
			height 40px
		.btn-close-list
			position absolute
			width auto
			height 24px
			top 8px 
			right 8px
			line-height 26px
			font-size 12px
			background-color lighten(OCEAN_BLUE, 30%)
			cursor pointer
			text-align center
			padding 0px 10px
			text-indent 0px
			color #ffffff
			&:hover
				color ORANGE_RED
				background-color #ffffff
	&-content
		position absolute
		width auto
		height auto
		left 0px
		right 0px
		top 44px
		bottom 0px
		overflow auto
		box-sizing border-box
		border 4px solid #ffffff
		-webkit-overflow-scrolling touch
		@media MOBILE
			border none
			top 40px
		.bus-line
			width 100%
			height auto
			border-bottom 1px dotted GRAY_E3
			.bus-line-title
				width auto
				height 20px
				margin 12px 12px 5px 12px
				line-height 20px
				font-size 14px
				color OCEAN_BLUE
			.bus-line-intro
				width auto
				padding 0px 12px 12px 12px
				height auto
				line-height 18px
				font-size 12px
				color #666666
		.bus-line-last
			border-bottom none



