.map-nav
	position absolute
	display block
	left 0
	right 0
	top 0
	bottom 0
	background-color #999999
	z-index ZI_map_nav
	.map-container
		width 100%
		height 100%
		display block
		overflow hidden
		overflow-x auto
		background-color #efefef
		.map-content
			width 100%
			height 100%
			display block
			overflow hidden
			position relative
			min-width 1000px
			.map-area
				position absolute
				width 1920px
				height 960px
				background-image url('img/map.png')
				left 50%
				top 50%
				margin-left -960px
				margin-top -480px
				.map-pin-left
					position absolute
					width auto
					height 47px
					background-color transparent
					background-image url('img/mappin-left.png')
					background-repeat no-repeat
					cursor pointer
					@media RETINA
						background-image url('img/mappin-left@2x.png')
						background-size auto 47px
					.map-pin-left-title
						height 34px
						line-height 34px
						color OCEAN_BLUE
						text-align left
						font-size 14px
						border-right 2px solid OCEAN_BLUE
						padding 0 6px 0 15px
						span
							font-size 12px
							color #777777
							line-height 30px
				.map-pin-right
					position absolute
					width auto
					height 47px
					background-color transparent
					background-image url('img/mappin-right.png')
					background-position right top
					background-repeat no-repeat
					cursor pointer
					@media RETINA
						background-image url('img/mappin-right@2x.png')
						background-size auto 47px
					.map-pin-right-title
						height 34px
						line-height 34px
						color OCEAN_BLUE
						text-align right
						font-size 14px
						border-left 2px solid OCEAN_BLUE
						padding 0 15px 0 6px
						span
							font-size 12px
							color #777777
							line-height 30px
