.map-nav
	position absolute
	display block
	left 0
	right 0
	top 0
	bottom 0
	background-color #999999
	z-index ZI_map_nav
	.map-container
		width 100%
		height 100%
		display block
		overflow hidden
		overflow-x auto
		background-color #efefef
		.map-content
			width 100%
			height 100%
			display block
			overflow hidden
			position relative
			min-width 1000px
			.map-area
				position absolute
				width 1920px
				height 960px
				background-image url('img/map.png')
				left 50%
				top 50%
				margin-left -960px
				margin-top -480px
