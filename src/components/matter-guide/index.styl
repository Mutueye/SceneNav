.matter-guide-title
	width 100%
	height 90px
	background-color #ffffff
	color BLACK_GRAY
	position relative
	display block
	margin-bottom COMMON_SPACE
	@media MOBILE
		margin-bottom COMMON_SPACE_MOBILE
		height 80px
	.matter-guide-icon
		width 32px
		height 32px
		border 19px solid GREEN
		background-color GREEN
		display block
		margin 10px
		float left
		background-image url('img/menu-icon-4.png')
		background-repeat no-repeat
		@media RETINA
			background-image url('img/menu-icon-4@2x.png')
			background-size 100%
		@media MOBILE
			margin 5px
	.matter-guide-text
		width auto
		position absolute
		height auto
		left 90px
		top 10px
		right 10px
		@media MOBILE
			left 80px
			top 5px
			right 5px
		h2
			margin 0
			color BLACK_GRAY
			font-size 20px
			@media MOBILE
				font-size 16px
		p
			margin 0
			color BLACK_GRAY_LIGHT
			font-size 16px
			line-height 30px
			@media MOBILE
				font-size 12px
				line-height 16px
				padding-top 2px

				





